<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/btn_video"
        style="@style/ted_details_style"
        android:layout_width="@dimen/video_width"
        android:layout_height="@dimen/video_height"
        android:layout_below="@id/tv_suggestion"
        android:layout_marginBottom="@dimen/margin_medium_2"
        >

        <ImageView
            android:id="@+id/iv_video"
            android:layout_width="@dimen/video_width"
            android:layout_height="@dimen/video_height"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_richard"
            />

        <TextView
            style="@style/text_in_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17:15" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_video_speaker_name"
        style="@style/video_speaker_name_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btn_video"
        android:layout_below="@id/tv_suggestion"
        android:layout_toRightOf="@id/btn_video"
        android:text="Richard Seymour" />

    <TextView
        android:id="@+id/tv_video_title"
        style="@style/video_title_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_video_speaker_name"
        android:layout_below="@id/tv_video_speaker_name"
        android:text="How beauty feels" />

    <ImageView
        android:id="@+id/btn_video_setting"
        style="@style/ic_video_setting_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_video_speaker_name"
        android:layout_below="@id/tv_suggestion"
        android:src="@drawable/ic_more_vert_grey_24dp" />

</RelativeLayout>